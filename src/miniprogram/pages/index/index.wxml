<cu-custom bgColor="bg-white" isCustom="{{true}}">
  <view slot="content">SodexMiniApp</view>
</cu-custom><!--标题栏-->

<view class="padding bg-white">

  <view class="flex">
    <view class="flex-twice text-sl padding">
      <text class="text-black text">就在这里 \n 吃个中饭</text>
    </view>
    <view class="cu-avatar xl round margin-left align-center" style="background-image:url({{user.avatarUrl}});" bindtap='toSelf'></view>
  </view>
  <view class="flex  p-xs margin-bottom-sm mb-sm">
    <view class="flex-sub padding-sm margin-xs radius">Learn More ></view>
  </view>
  <view class="flex  p-xs margin-bottom-sm mb-sm solid-bottom">
    <swiper class="flex-sub screen-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
      <swiper-item wx:for="{{swiperList}}" wx:key>
        <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
        <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
      </swiper-item>
    </swiper>
  </view>
  <view class="flex p-xs margin-bottom-sm mb-sm">
    <view class="flex-twice text-xl padding">
      <text class="text-black text-bold">今日菜谱</text>
    </view>
  </view>
<!--上半部分-->

  <view class="cu-card article {{isCard?'no-card':''}}" wx:for="{{orderList}}">
    <view class="cu-item shadow">
      <view class="title">
        <view class="text-cut">{{item.name}}</view>
      </view>
      <view class="content">
        <image src="{{item.imgURL}}" mode="aspectFill"></image>
        <view class="desc">
          <view class="text-content">{{item.desc}}</view>
          <view>
            <text class="text-price text-xxl"> {{item.price}}</text>
            <button class="cu-btn bg-yellow round shadow margin-left" style="width:50%;" bindtap='toFood'>订购</button>
          </view>

        </view>
      </view>
    </view>
  </view>
  <!--菜单-->

</view>
<!--Container-->